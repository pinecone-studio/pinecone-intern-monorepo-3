{
  "name": "restaurant-backend",
  "$schema": "../../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/2k/restaurant/backend",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/next:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/apps/2k/restaurant/backend"
      },
      "configurations": {
        "development": {
          "outputPath": "dist/apps/2k/restaurant/backend"
        }
      },
      "dependsOn": [
        {
          "target": "codegen",
          "params": "forward"
        }
      ]
    },
    "serve": {
      "executor": "@nx/next:server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "restaurant-backend:build",
        "dev": true
      },
      "configurations": {
        "development": {
          "buildTarget": "restaurant-backend:build:development",
          "dev": true
        },
        "production": {
          "buildTarget": "restaurant-backend:build:production",
          "dev": false
        }
      },
      "dependsOn": [
        {
          "target": "codegen",
          "params": "forward"
        }
      ]
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/2k/restaurant/backend/jest.config.ts",
        "passWithNoTests": true,
        "codeCoverage": true
      },
      "dependsOn": [
        {
          "target": "codegen",
          "params": "forward"
        }
      ]
    },
    "get-secrets:testing": {
      "executor": "@pinecone-intern-monorepo/secrets:get",
      "defaultConfiguration": "testing",
      "configurations": {
        "testing": {
          "groups": ["2k-restaurant-backend"],
          "env": "test"
        }
      }
    },
    "get-secrets:prod": {
      "executor": "@pinecone-intern-monorepo/secrets:get",
      "defaultConfiguration": "prod",
      "configurations": {
        "prod": {
          "groups": ["2k-restaurant-backend"],
          "env": "prod"
        }
      }
    },
    "codegen": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["graphql-codegen --config ./apps/2k/restaurant/backend/codegen.ts"]
      }
    },
    "export": {
      "executor": "@nx/next:export",
      "options": {
        "buildTarget": "restaurant-backend:build:production"
      }
    },
    "export-env": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["export $(cat apps/2k/restaurant/backend/.env | xargs)"],
        "parallel": false
      }
    },

    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/2k/restaurant/backend/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "clean": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["rm -rf dist/apps/2k/restaurant/backend", "rm -rf .vercel"]
      }
    },
    "preview": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "npx dotenv -v VERCEL_ORG_ID=team_GcoSxSxP0tdBV7zgpH5E0dtY -v VERCEL_PROJECT_ID=prj_BKW4dAnQwuzAYiV9APJGoJB8pciX -- vercel pull --yes --environment=preview --token=$VERCEL_TOKEN",
          "npx env-cmd -f apps/2k/restaurant/backend/.env vercel build --token=$VERCEL_TOKEN",
          "npx dotenv -v VERCEL_ORG_ID=team_GcoSxSxP0tdBV7zgpH5E0dtY -v VERCEL_PROJECT_ID=prj_BKW4dAnQwuzAYiV9APJGoJB8pciX -- vercel --archive=tgz --prebuilt --token=$VERCEL_TOKEN"
        ],
        "parallel": false
      },
      "dependsOn": [
        {
          "target": "clean"
        },
        {
          "target": "get-secrets:testing"
        },
        {
          "target": "export-env"
        },
        {
          "target": "codegen",
          "params": "forward"
        }
      ]
    },
    "deploy-testing": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "nx codegen restaurant-backend",
          "mkdir -p .vercel && cp -r ./apps/2k/restaurant/backend/vercel.config.json .vercel/project.json",
          "npx env-cmd -f apps/2k/restaurant/backend/.env sh -c 'vercel build --prod --token=\"$VERCEL_TOKEN\"'",
          "npx env-cmd -f apps/2k/restaurant/backend/.env sh -c 'vercel --prebuilt --prod --yes --token=\"$VERCEL_TOKEN\"'"
        ],
        "parallel": false
      },
      "dependsOn": [
        {
          "target": "clean"
        }
      ]
    },
    "preview-testing": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "nx codegen restaurant-backend",
          "mkdir -p .vercel && cp -r ./apps/2k/restaurant/backend/vercel.config.json .vercel/project.json",
          "npx env-cmd -f apps/2k/restaurant/backend/.env sh -c 'vercel build --token=\"$VERCEL_TOKEN\"'",
          "npx env-cmd -f apps/2k/restaurant/backend/.env sh -c 'vercel --prebuilt --yes --token=\"$VERCEL_TOKEN\"'"
        ],
        "parallel": false
      },
      "dependsOn": [
        {
          "target": "clean"
        }
      ]
    },
    "deploy-prod": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "npx dotenv -v VERCEL_ORG_ID=team_GcoSxSxP0tdBV7zgpH5E0dtY -v VERCEL_PROJECT_ID=prj_BKW4dAnQwuzAYiV9APJGoJB8pciX -- vercel pull --yes --environment=production --token=$VERCEL_TOKEN",
          "vercel build --prod --token=$VERCEL_TOKEN",
          "npx dotenv -v VERCEL_ORG_ID=team_GcoSxSxP0tdBV7zgpH5E0dtY -v VERCEL_PROJECT_ID=prj_BKW4dAnQwuzAYiV9APJGoJB8pciX -- vercel --prebuilt --prod --token=$VERCEL_TOKEN"
        ],
        "parallel": false
      },
      "dependsOn": [
        {
          "target": "clean"
        },
        {
          "target": "get-secrets:prod"
        },
        {
          "target": "export-env"
        },
        {
          "target": "codegen",
          "params": "forward"
        }
      ]
    }
  },
  "tags": []
}
